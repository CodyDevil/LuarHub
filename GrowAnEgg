local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Luar Hub",
    SubTitle = "By Vouxy",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Light",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "egg" }),
    Others = Window:AddTab({ Title = "Others", Icon = "settings" }),
    Credits = Window:AddTab({ Title = "Credits", Icon = "heart" }),
    Settings = Window:AddTab({ Title = "Settings", Icon = "sliders" })
}

local Options = Fluent.Options

-- Controls
local speedBoostValue = 36
local autoSpinActive = false

-- ü•ö Eggs
local allEggs = {
    "Chicken Egg", "Crow Egg", "Turtle Egg", "Crab Egg", "Duck Egg", "Red Parrot Egg",
    "Billy Egg", "Monkey Egg", "Horse Egg", "Penguin Egg", "Storm Snake Egg", "Wild Snake Egg",
    "Stegosaurus Egg", "Gastonia Egg", "Elephant Egg", "Alligator Egg", "Blossom Fly Egg", "Leafjaw Egg",
    "Mammoth Egg", "Crocodile Egg", "Sea Monster Egg", "Wild Shark Egg", "Dragon Egg",
    "Orchidra Egg", "Venom Dragon Egg", "Dreadmaw Egg"
}

local selectedEgg = allEggs[1]

local EggDropdown = Tabs.Main:AddDropdown("EggDropdown", {
    Title = "Select Egg",
    Values = allEggs,
    Multi = false,
    Default = 1
})

EggDropdown:OnChanged(function(value)
    selectedEgg = value
end)

Tabs.Main:AddButton({
    Title = "Purchase Egg",
    Callback = function()
        game:GetService("ReplicatedStorage").Remotes.PurchaseEggFunc:InvokeServer(selectedEgg)
    end
})

-- üå± Seeds
local allSeeds = {
    "Instant Grow Seed",
    "Lost Seed",
    "Golden Seed",
    "Wild Seed",
    "Crimson Seed",
    "Fire Seed",
    "Shadow Seed",
    "Neon Seed",
    "Nature Seed",
    "Deep Seed",
    "Firework Seed",
    "Rainbow Seed"
}

local selectedSeed = allSeeds[1]

local SeedDropdown = Tabs.Main:AddDropdown("SeedDropdown", {
    Title = "Select Seed",
    Values = allSeeds,
    Multi = false,
    Default = 1
})

SeedDropdown:OnChanged(function(value)
    selectedSeed = value
end)

Tabs.Main:AddButton({
    Title = "Purchase Seed",
    Callback = function()
        local args = {
            [1] = selectedSeed
        }
        game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("PurchaseSeedFunc"):InvokeServer(unpack(args))
    end
})

-- üí∞ Sell Inventory
Tabs.Main:AddButton({
    Title = "Sell Inventory",
    Callback = function()
        game:GetService("ReplicatedStorage").Remotes.SellInventoryFunc:InvokeServer()
    end
})

-- üéÅ Daily Rewards
Tabs.Others:AddButton({
    Title = "Claim Rewards",
    Callback = function()
        for i = 1, 7 do
            game:GetService("ReplicatedStorage").Remotes.TimeRewardFunc:InvokeServer(i)
            task.wait(0.3)
        end
    end
})

-- üèÉ SpeedBoost with Slider
local SpeedSlider = Tabs.Others:AddSlider("SpeedSlider", {
    Title = "Speed Boost",
    Description = "Adjust your walk speed",
    Default = 36,
    Min = 16,
    Max = 100,
    Rounding = 0
})

SpeedSlider:OnChanged(function(value)
    speedBoostValue = value
end)

-- Speed loop
task.spawn(function()
    while task.wait(0.1) do
        local humanoid = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
        if humanoid then
            humanoid.WalkSpeed = speedBoostValue
        end
    end
end)

-- üîÅ Auto Spin
local AutoSpin = Tabs.Others:AddToggle("AutoSpin", { Title = "Auto Spin", Default = false })

AutoSpin:OnChanged(function(state)
    autoSpinActive = state
    if autoSpinActive then
        coroutine.wrap(function()
            while autoSpinActive and task.wait(0.5) do
                game:GetService("ReplicatedStorage").Events.SpinRequest:FireServer()
            end
        end)()
    end
end)

-- üìù Credits
Tabs.Credits:AddParagraph({
    Title = "Credits",
    Content = "ScriptBlox: Vouxy\nDiscord: shiergy"
})

-- ‚öôÔ∏è Fluent Configs
SaveManager:SetLibrary(Fluent)
InterfaceManager:SetLibrary(Fluent)

SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({})
InterfaceManager:SetFolder("FluentScriptHub")
SaveManager:SetFolder("FluentScriptHub/LuarHub")

InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

Window:SelectTab(1)

Fluent:Notify({
    Title = "Luar Hub",
    Content = "Script loaded successfully!",
    Duration = 6
})

SaveManager:LoadAutoloadConfig()
